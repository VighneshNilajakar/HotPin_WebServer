# HotPin WebServer Configuration

# Server settings
HOST=0.0.0.0
PORT=8000

# WebSocket settings
WEBSOCKET_PORT=8000
WEBSOCKET_PATH=/ws
WEBSOCKET_TOKEN=mysecrettoken123
USE_TLS=false

# Discovery settings
MDNS_ADVERTISE=false
HOTPIN_NAME=HotpinServer
UDP_BROADCAST=false
BROADCAST_PORT=50000
BROADCAST_INTERVAL_SEC=5
PRINT_QR=false

# Authentication
WS_TOKEN=mysecrettoken123

# Groq Whisper STT settings
GROQ_STT_MODEL=whisper-large-v3-turbo
STT_LANGUAGE=en
STT_TEMPERATURE=0.0

# Audio settings
CHUNK_SIZE_BYTES=16000
MIN_RECORD_DURATION_SEC=0.5
MAX_CHUNKS_PER_SEC=10

# STT settings
STT_CONF_THRESHOLD=0.5

# Image settings
MAX_IMAGE_SIZE_BYTES=2097152
IMAGE_MAX_DIMENSION=1600
IMAGE_SOFT_PERCENT=20

# Disk and resource settings
TEMP_DIR=./temp
MAX_SESSION_DISK_MB=100
AUDIO_SOFT_PERCENT=80
SESSION_GRACE_SEC=30

# Session settings
MAX_RERECORD_ATTEMPTS=2
MAX_CONNECTIONS=1
PLAYBACK_READY_TIMEOUT_SEC=5.0

# API settings
GROQ_API_KEY=your_groq_api_key_here
GROQ_RETRY_ATTEMPTS=3
GROQ_FALLBACK_MODEL=meta-llama/llama-4-scout-7b
PLAYBACK_URL_EXP_SEC=300

# Security
TOKEN_TTL_SEC=3600

# Logging
LOG_LEVEL=INFO